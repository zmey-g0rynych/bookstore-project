<Window x:Class="WpfApp1.TopUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пополнение баланса" Height="150" Width="300"
        Background="#FFF8E7"
        FontFamily="Segoe UI"
        FontSize="14"
        Foreground="#4B3B2B">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Введите сумму пополнения:" Margin="0,0,0,8" Foreground="#7D8F69" FontWeight="SemiBold"/>
            <TextBox x:Name="TopUpAmountBox" Margin="0,0,0,15" BorderBrush="#A47149" BorderThickness="1" Background="#EDE6DA" Foreground="#4B3B2B"/>
            <Button Content="Пополнить" Width="100" HorizontalAlignment="Right" Height="30" 
                    Background="#A47149" Foreground="White" BorderBrush="#7D8F69" Click="TopUp_Click"/>
        </StackPanel>
    </Grid>
</Window>
