<Window x:Class="WpfApp1.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Welcome_Title}"
        Height="350"
        Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#EDE6DA"
        FontFamily="Segoe UI"
        FontSize="14"
        Foreground="#4B3B2B">

    <Border Padding="20"
            CornerRadius="10"
            Background="#FFF8E7"
            BorderBrush="#A47149"
            BorderThickness="1">

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="250">

            <!-- Заголовок -->
            <TextBlock Text="{DynamicResource Welcome_Header}"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#7D8F69"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Выбор региона -->
            <TextBlock Text="{DynamicResource Welcome_SelectRegion}" 
                       Margin="0,0,0,5"
                       FontWeight="SemiBold"/>

            <ComboBox x:Name="RegionComboBox"
                      Height="30"
                      Margin="0,0,0,15"
                      BorderBrush="#A47149"
                      BorderThickness="1"
                      Background="#EDE6DA">

                <ComboBoxItem Content="{DynamicResource Region_Russia}"/>
                <ComboBoxItem Content="{DynamicResource Region_Ukraine}"/>
                <ComboBoxItem Content="{DynamicResource Region_UK}"/>
            </ComboBox>

            <!-- Ввод баланса -->
            <TextBlock Text="{DynamicResource Welcome_EnterBalance}"
                       Margin="0,0,0,5"
                       FontWeight="SemiBold"/>

            <TextBox x:Name="BalanceInput"
                     Height="30"
                     Margin="0,0,0,20"
                     BorderBrush="#A47149"
                     BorderThickness="1"
                     Background="#EDE6DA"/>

            <!-- Кнопка -->
            <Button Content="{DynamicResource Welcome_ContinueButton}"
                    Height="35"
                    Background="#A47149"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderBrush="#7D8F69"
                    Click="Continue_Click"/>

        </StackPanel>
    </Border>
</Window>
