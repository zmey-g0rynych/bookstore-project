<Window x:Class="WpfApp1.BookDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Информация о книге" Height="300" Width="400"
        Background="#FFF8E7" 
        FontFamily="Segoe UI"
        FontSize="14"
        Foreground="#4B3B2B">
    <StackPanel Margin="15">
        <TextBlock x:Name="TitleText" FontWeight="Bold" FontSize="18" Foreground="#7D8F69"/>
        <TextBlock x:Name="AuthorText" Margin="0,8,0,0" Foreground="#A47149"/>
        <TextBlock x:Name="PriceText" Margin="0,8,0,0" Foreground="#A47149"/>
        <TextBlock x:Name="DescriptionText" Margin="0,15,0,0" TextWrapping="Wrap" Foreground="#4B3B2B"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0" >
            <Button Content="Добавить в корзину" Width="140" Height="30" Margin="0,0,10,0" 
                    Background="#A47149" Foreground="White" BorderBrush="#7D8F69" Click="AddToCart_Click"/>
            <Button Content="Закрыть" Width="100" Height="30" 
                    Background="#7D8F69" Foreground="White" BorderBrush="#A47149" Click="Close_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
