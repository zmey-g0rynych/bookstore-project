<Window x:Class="WpfApp1.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Cart_Title}" Height="400" Width="500"
        Background="#EDE6DA"
        FontFamily="Segoe UI"
        FontSize="14"
        Foreground="#4B3B2B">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="BalanceText" FontWeight="Bold" FontSize="16" Grid.Row="0" Margin="0,0,0,10" Foreground="#7D8F69"/>
        <ListBox x:Name="CartList" Grid.Row="1" Height="200" Margin="0,0,0,10" 
                 BorderBrush="#A47149" BorderThickness="1" Background="#FFF8E7" Foreground="#4B3B2B"/>
        <TextBlock x:Name="TotalText" Grid.Row="2" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="#7D8F69"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button Content="{DynamicResource Cart_RemoveSelected}" Width="140" Margin="0,0,10,0"
                    Background="#D86A4A" Foreground="White" BorderBrush="#7C1A1A" Click="RemoveSelected_Click"/>
            <Button Content="{DynamicResource Cart_Pay}" Width="140"
                    Background="#7D8F69" Foreground="White" BorderBrush="#4B3B2B" Click="PayCart_Click"/>
        </StackPanel>

        <Button Content="{DynamicResource Cart_Close}" Grid.Row="4" HorizontalAlignment="Right" Width="100"
                Background="#A47149" Foreground="White" BorderBrush="#7D8F69" Click="Close_Click"/>
    </Grid>
</Window>
