<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Main_Title}" Height="600" Width="800"
        Background="#FFF8E7"
        FontFamily="Segoe UI"
        FontSize="14"
        Foreground="#4B3B2B">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock x:Name="BalanceText" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" Foreground="#7D8F69"/>
            <Button Content="{DynamicResource Main_TopUpBalanceButton}" Width="150" Height="30" Margin="0,0,0,15" 
                    Background="#A47149" Foreground="White" BorderBrush="#7D8F69" Click="TopUpBalance_Click"/>

            <Button Content="{DynamicResource Main_CartButton}"
                    HorizontalAlignment="Right"
                    Width="120" Height="30"
                    Margin="0,0,0,15"
                    Background="#7D8F69" Foreground="White" BorderBrush="#A47149"
                    Click="CartButton_Click"/>

            <ListView x:Name="BooksListView" MouseDoubleClick="BooksListView_DoubleClick" Height="420" 
                      Background="#EDE6DA" BorderBrush="#A47149" BorderThickness="1"
                      Foreground="#4B3B2B">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="{DynamicResource Main_BookTitle}" DisplayMemberBinding="{Binding Title}" Width="300" />
                        <GridViewColumn Header="{DynamicResource Main_BookAuthor}" DisplayMemberBinding="{Binding AuthorFullName}" Width="350" />
                        <GridViewColumn Header="{DynamicResource Main_BookPrice}" DisplayMemberBinding="{Binding Price}" Width="100" />
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>
